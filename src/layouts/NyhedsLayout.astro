---
import MainLayout from "./MainLayout.astro";
const {frontmatter} = Astro.props;
---
<MainLayout title="Titel">
	<div class="max-w-5xl mx-auto px-4">	
		<img src={frontmatter.coverimage} alt={frontmatter.coveralt} class="mb-8"/>
		<section class="prose">
			<h1 class="text-persianmosaic-900 font-prompt">{frontmatter.title}</h1>
			<slot />
		</section>
	</div>
</MainLayout>